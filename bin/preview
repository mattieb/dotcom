#!/usr/bin/env python

import os
import subprocess
import sys
import time

path = os.path.dirname(sys.argv[0])
python = os.path.join(path, 'python')
liquidluck = os.path.join(path, 'liquidluck')
print liquidluck

subprocess.call([python, liquidluck, 'build', '-v'])
server = subprocess.Popen([python, liquidluck, 'server'])
time.sleep(1)
subprocess.call(['open', 'http://127.0.0.1:8000'])
server.wait()

